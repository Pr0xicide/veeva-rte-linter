{
  "name": "veeva-rte-linter",
  "version": "0.1.0",
  "description": "An approved email or rep-triggered email (RTE) HTML linter to report and identify issues when developing HTML for Veeva RTEs.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "dev": "jest --watch",
    "lint": "node index.js",
    "prepare": "husky"
  },
  "author": "Jayvin Duong",
  "dependencies": {
    "node-html-parser": "^6.1.12",
    "winston": "^3.11.0",
    "veeva-approved-email-util": "^0.3.0"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "jest": "^29.7.0"
  },
  "lint-staged": {
    "*.{js,md}": "prettier --write"
  }   
}
